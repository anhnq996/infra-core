# ============================================
# MinIO Secret - EXAMPLE (safe to commit)
# ============================================
# Hướng dẫn:
#   cp secret.yaml.example secret.yaml
#   echo -n "infra_minio" | base64
#   nano secret.yaml
#   kubectl apply -f secret.yaml
# ============================================
apiVersion: v1
kind: Secret
metadata:
  name: minio-secret
  namespace: infra
type: Opaque
data:
  # MinIO root username
  # echo -n "infra_minio" | base64
  rootUser: REPLACE_BASE64(MINIO_ROOT_USER)

  # MinIO root password (min 8 chars)
  # echo -n "minio_secret_2026" | base64
  rootPassword: REPLACE_BASE64(MINIO_ROOT_PASSWORD)
