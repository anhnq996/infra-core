# ============================================
# PostgreSQL Secret - EXAMPLE (safe to commit)
# ============================================
# Hướng dẫn:
#   cp secret.yaml.example secret.yaml
#   echo -n "your_password" | base64   ← tạo base64
#   nano secret.yaml                   ← điền giá trị thực
#   kubectl apply -f secret.yaml
# ⚠️  KHÔNG commit secret.yaml lên Git!
# ============================================
apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  namespace: infra
type: Opaque
data:
  # Password cho postgres admin (POSTGRES_USER: infra_admin)
  # echo -n "infra_secret_2026" | base64
  postgres-password: REPLACE_BASE64(POSTGRES_ADMIN_PASSWORD)

  # Password cho gotalk_user (app user)
  # echo -n "gotalk_secret_2026" | base64
  password: REPLACE_BASE64(GOTALK_DB_PASSWORD)

  # Password cho replication (có thể để random)
  # openssl rand -base64 24 | tr -d '\n' | base64
  replication-password: REPLACE_BASE64(REPLICATION_PASSWORD)
